<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.plugdio.mqttsysconsole.MainActivity$PlaceholderFragment">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow>

                <TextView

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$SYS/broker/version"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/$SYS_broker_version"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="mosquitto version 1.4.10"
                    android:layout_weight="1"
                    android:minWidth="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip"
                    android:layout_width="match_parent" />
            </TableRow>

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The version of the broker."
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:layout_width="match_parent"
                android:padding="5dip"
                android:layout_marginBottom="5dp" />


            <TableRow>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$SYS/broker/timestamp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />

                <TextView
                    android:id="@+id/$SYS_broker_timestamp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Thu, 25 Aug 2016 15:32:03 +0100"
                    android:layout_weight="1"
                    android:minWidth="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />
            </TableRow>

            <TextView
                android:layout_span="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The timestamp at which this particular build of the broker was made."
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:padding="5dip"
                android:layout_marginBottom="5dp" />

            <TableRow>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$SYS/broker/changeset"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />

                <TextView
                    android:id="@+id/$SYS_broker_changeset"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="n.a"
                    android:layout_weight="1"
                    android:minWidth="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />
            </TableRow>

            <TextView
                android:layout_span="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The repository changeset (revision) associated with this build. Static."
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:padding="5dip"
                android:layout_marginBottom="5dp" />

            <TableRow>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$SYS/broker/heap/current"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />

                <TextView
                    android:id="@+id/$SYS_broker_heap_current"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="n.a"
                    android:layout_weight="1"
                    android:minWidth="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />
            </TableRow>

            <TextView
                android:layout_span="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The current size of the heap memory in use by mosquitto. Note that this topic may be unavailable depending on compile time options."
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:padding="5dip"
                android:layout_marginBottom="5dp" />

            <TableRow>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$SYS/broker/heap/maximum"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />

                <TextView
                    android:id="@+id/$SYS_broker_heap_maximum"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="n.a"
                    android:layout_weight="1"
                    android:minWidth="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:padding="3dip" />
            </TableRow>

            <TextView
                android:layout_span="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The largest amount of heap memory used by mosquitto. Note that this topic may be unavailable depending on compile time options."
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:padding="5dip"
                android:layout_marginBottom="85dp" />


            <!--View
                android:layout_height="2dip"
                android:background="#FF909090" /-->
        </TableLayout>

    </RelativeLayout>
</ScrollView>