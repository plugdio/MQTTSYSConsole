<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.plugdio.mqttsysconsole.MainActivity$PlaceholderFragment">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">


            //$SYS/broker/messages/received

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/messages/received" />

                <TextView
                    android:id="@+id/$SYS_broker_messages_received"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of messages of any type received since the broker started." />


            //$SYS/broker/messages/sent

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/messages/sent" />

                <TextView
                    android:id="@+id/$SYS_broker_messages_sent"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of messages of any type sent since the broker started." />


            //$SYS/broker/messages/stored

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/messages/stored" />

                <TextView
                    android:id="@+id/$SYS_broker_messages_stored"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The number of messages currently held in the message store. This includes retained messages and messages queued for durable clients." />


            //$SYS/broker/publish/messages/dropped

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/publish/messages/dropped" />

                <TextView
                    android:id="@+id/$SYS_broker_publish_messages_dropped"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of publish messages that have been dropped due to inflight/queuing limits." />


            //$SYS/broker/publish/messages/received

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/publish/messages/received" />

                <TextView
                    android:id="@+id/$SYS_broker_publish_messages_received"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of PUBLISH messages received since the broker started." />


            //$SYS/broker/publish/messages/sent

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/publish/messages/sent" />

                <TextView
                    android:id="@+id/$SYS_broker_publish_messages_sent"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of PUBLISH messages sent since the broker started." />


            //$SYS/broker/retained messages/count

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/retained messages/count" />

                <TextView
                    android:id="@+id/$SYS_broker_retained_messages_count"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of retained messages active on the broker." />


            <!--

                        <View
                                        android:layout_height="2dip"
                                        android:background="#FF909090" />

            -->

            //$SYS/broker/bytes/received

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/bytes/received"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/$SYS_broker_bytes_received"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of bytes received since the broker started." />


            //$SYS/broker/bytes/sent

            <TableRow>

                <TextView
                    style="@style/SysTopicTitleName"
                    android:text="$SYS/broker/bytes/sent" />

                <TextView
                    android:id="@+id/$SYS_broker_bytes_sent"
                    style="@style/SysTopicTitleValue"
                    android:text="n.a." />
            </TableRow>

            <TextView
                style="@style/SysTopicDescription"
                android:text="The total number of bytes sent since the broker started."
                android:layout_marginBottom="55dp" />


        </TableLayout>

    </RelativeLayout>
</ScrollView>